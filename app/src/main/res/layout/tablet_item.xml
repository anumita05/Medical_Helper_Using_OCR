<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/primaryColor">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/tablet_item_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tablet_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            app:layout_constraintStart_toEndOf="@id/tablet_item_image"
            app:layout_constraintTop_toTopOf="parent"
            android:singleLine="true"
            android:textSize="21sp"
            android:textColor="@color/colorLightBlue"
            />

        <TextView
            android:id="@+id/tablet_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/tablet_item_image"
            app:layout_constraintTop_toBottomOf="@id/tablet_item_name"
            android:singleLine="true"
            android:textSize="19sp"
            />

        <TextView
            android:id="@+id/tablet_item_Color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/tablet_item_image"
            app:layout_constraintTop_toBottomOf="@id/tablet_item_type"
            android:singleLine="true"
            android:textSize="19sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/chat_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_menu_chat"
            android:padding="3dp"
            android:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>