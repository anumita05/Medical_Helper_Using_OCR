<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicineDetails"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/medicine_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/changeImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circular_background"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/medicine_image"
                    app:layout_constraintLeft_toRightOf="@id/medicine_image"
                    />

            </android.support.constraint.ConstraintLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColorHint="@color/colorLightBlue"
                >

                <EditText
                    android:id="@+id/medicine_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:hint="Name"
                    android:textColorHint="@color/colorLightBlue"
                    />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:text="Type Of Medicine"
                android:textColor="@color/primaryTextColor"
                android:textSize="17sp"
                android:layout_marginBottom="5dp"
                />

            <Spinner
                android:id="@+id/medicine_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/black"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColorHint="@color/colorLightBlue"
                >

                <EditText
                    android:id="@+id/medicine_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:hint="Medicine Color"
                    android:textColorHint="@color/colorLightBlue"
                    />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:text="Size Of Medicine"
                android:textColor="@color/primaryTextColor"
                android:textSize="17sp"
                android:layout_marginBottom="5dp"
                />

            <Spinner
                android:id="@+id/medicine_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/black"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColorHint="@color/colorLightBlue"
                >

                <EditText
                    android:id="@+id/medicine_expiryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:hint="Expiry Date"
                    android:textColorHint="@color/colorLightBlue"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:focusable="false"
                    />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/black"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColorHint="@color/colorLightBlue"
                >

                <EditText
                    android:id="@+id/medicine_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:hint="Details"
                    android:textColorHint="@color/colorLightBlue"
                    />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/black"
                />

        </LinearLayout>

    </ScrollView>

    <TableRow
        android:id="@+id/update_row_med"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorLightGray"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <TextView
            android:id="@+id/btnUpdateMed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Submit"
            android:gravity="center"
            android:textSize="19sp"
            android:background="@color/darkGray"
            android:textColor="@color/primaryColor"
            />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorLightBlue"/>

        <TextView
            android:id="@+id/btnCancelMed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:gravity="center"
            android:textSize="19sp"
            android:background="@color/darkGray"
            android:textColor="@color/primaryColor"
            />
    </TableRow>

    <TextView
        android:id="@+id/btnEditMed"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="Edit Details"
        android:gravity="center"
        android:textSize="19sp"
        android:background="@color/darkGray"
        android:textColor="@color/primaryColor"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>